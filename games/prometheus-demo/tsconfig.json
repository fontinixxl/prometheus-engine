{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@prometheus/engine-core": [
        "../../packages/engine-core/dist"
      ],
      "../../packages/engine-core/imports.js": [
        "../../packages/engine-core/imports.d.ts"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}