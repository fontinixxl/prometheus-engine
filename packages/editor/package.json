{
  "name": "editor",
  "version": "0.0.0",
  "main": "src/main.ts",
  "scripts": {
    "start": "electron ./dist/main.js",
    "build": "vite build && tsc -p tsconfig.json",
    "dev:renderer": "vite",
    "dev:main": "tsc -w -p tsconfig.json",
    "dev": "cross-env NODE_ENV=development tsc -p tsconfig.json && concurrently \"pnpm run dev:main\" \"pnpm run dev:renderer\" \"wait-on http://localhost:5173 file:./dist/main.js && cross-env NODE_ENV=development electron ./dist/main.js\""
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^4.12.0",
    "react-resizable-panels": "^1.0.10",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "26.2.2",
    "electron-builder": "^24.6.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.1.6",
    "vite": "^6.3.5",
    "wait-on": "^7.0.1"
  }
}
